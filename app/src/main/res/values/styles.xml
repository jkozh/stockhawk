<resources>

    <style name="StockHawkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">@dimen/text_size_title_material</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">@dimen/text_size_title_material</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">@dimen/text_size_headline_material</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
